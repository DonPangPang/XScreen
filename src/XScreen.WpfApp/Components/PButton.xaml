<UserControl x:Class="XScreen.WpfApp.Components.PButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:XScreen.WpfApp.Components"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="PBtn" MouseEnter="Btn_MouseMoveIn" MouseLeave="Btn_MouseMoveOut">
        <Label x:Name="PText" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White"></Label>
    </Border>
</UserControl>